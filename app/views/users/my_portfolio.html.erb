<h1>My Portfolio</h1>
<div class="search-area">
  <h3>Search stocks</h3>

  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="fomr-group row">
      <div class="col-sm-9 pe-0">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-1 ps-0">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%=fa_icon "search 2x", class: 'text-white'%>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="row mt-3">
  <div id="results" class="col-10">
  </div>
</div>

<% unless @tracked_stocks.empty? %>
  <%= render 'shared/stocks_list', stocks: @tracked_stocks %>
<% end %>
